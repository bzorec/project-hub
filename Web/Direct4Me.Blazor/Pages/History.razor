@page "/history"

<div class="container-fluid bg-dark min-vh-100 pt-lg-3">
    <div class="row ms-3 me-3">
        <h2 class="mb-4">Unlock History</h2>
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }
    </div>

    <div class="row mt-4 ms-3 me-3">
        <div class="col-md-12">
            @if (UnlockHistory.Any())
            {
                <div class="card text-white bg-secondary">
                    <div class="card-body">
                        <table class="table table-dark table-striped">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Date</th>
                                <th scope="col">User</th>
                                <th scope="col">Postbox ID</th>
                                <th scope="col">Type</th>
                                <th scope="col">Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var (unlock, index) in UnlockHistory.Distinct().Select((value, i) => (value, i)))
                            {
                                <tr>
                                    <th scope="row">@(index + 1)</th>
                                    <td>@unlock.Date</td>
                                    <td>@unlock.UserName</td>
                                    <td>@unlock.PostboxId</td>
                                    <td>@unlock.Type</td>
                                    <td class="@GetStatusClass(unlock.Success)">@GetStatusText(unlock.Success)</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">No unlock history records available.</div>
            }
        </div>
    </div>
</div>

@if (ShowPopupGuide)
{
    <PopupGuide Title="@GuideTitle" Content="@GuideContent" IsPopupVisible="true" ClosePopupRequested="@HandleClosePopup"/>
}